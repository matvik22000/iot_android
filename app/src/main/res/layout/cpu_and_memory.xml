<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.circularreveal.cardview.CircularRevealCardView
        android:id="@+id/cpuAndMemory"
        android:layout_width="335sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50sp"
        android:layout_marginVertical="10sp"
        app:cardBackgroundColor="#1A1A1A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="25sp"
                android:paddingTop="10sp"
                android:paddingEnd="50sp"
                android:text="54.1%"
                android:textColor="@color/mainText"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_marginStart="-40dp"
                android:layout_toEndOf="@id/value"
                android:paddingVertical="15sp"
                android:text="CPU"
                android:textColor="@color/secondaryText"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/freq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/value"
                android:layout_marginTop="-5sp"
                android:layout_marginBottom="5sp"
                android:gravity="end"
                android:paddingStart="25sp"
                android:paddingEnd="0sp"
                android:text="1103/2200"
                android:textAlignment="viewEnd"
                android:textColor="@color/secondaryText"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/freq_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/freq"
                android:layout_marginHorizontal="2sp"
                android:layout_toEndOf="@+id/freq"
                android:text="Ghz"
                android:textColor="@color/secondaryText"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/memory_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/unit"
                android:paddingStart="25sp"
                android:paddingTop="10sp"
                android:paddingEnd="50sp"
                android:text="91.3%"
                android:textColor="@color/mainText"
                android:textSize="21sp" />


            <TextView
                android:id="@+id/mem_gb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/memory_usage"
                android:layout_alignEnd="@id/memory_usage"
                android:layout_marginEnd="59sp"
                android:layout_marginTop="-5sp"
                android:layout_marginBottom="5sp"
                android:gravity="end"
                android:paddingStart="0sp"
                android:paddingEnd="0sp"
                android:text="14.1/15.8"
                android:textAlignment="viewEnd"
                android:textColor="@color/secondaryText"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/mem_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/mem_gb"
                android:layout_below="@id/memory_usage"
                android:layout_marginHorizontal="45sp"
                android:layout_marginTop="-5sp"
                android:layout_marginBottom="5sp"
                android:gravity="end"
                android:paddingStart="6sp"
                android:paddingEnd="0sp"
                android:text="GB"
                android:textAlignment="viewEnd"
                android:textColor="@color/secondaryText"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="14sp"
                android:paddingVertical="15sp"
                android:text="Memory"
                android:textColor="@color/secondaryText"
                android:textSize="18sp" />

        </RelativeLayout>
    </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

</RelativeLayout>